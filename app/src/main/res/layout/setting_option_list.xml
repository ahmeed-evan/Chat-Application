<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/settingOptionIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/ic_key" />

    <TextView
        android:id="@+id/settingOptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/settingOptionIcon"
        android:layout_alignBottom="@id/settingOptionIcon"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/settingOptionIcon"
        android:gravity="center_vertical"
        android:textStyle="italic"
        android:text="Account"
        android:textAppearance="@style/Rubik_Light_Black_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="16dp"
        android:layout_alignStart="@id/settingOptionTextView"
        android:layout_below="@id/settingOptionTextView"/>


</RelativeLayout>